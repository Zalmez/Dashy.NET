@using Dashy.Net.Shared.Models
@using Microsoft.AspNetCore.Components.Forms

<div class="form-group">
    <label>RSS Feed URL</label>
    <InputText class="form-control" @bind-Value="EditModel.FeedUrl" />
    <small class="form-text">The URL of the RSS feed to display.</small>
</div>

<div class="form-group">
    <label>Max Items</label>
    <InputNumber class="form-control" @bind-Value="EditModel.MaxItems" />
    <small class="form-text">Maximum number of items to display from the feed (leave empty for all).</small>
</div>

<div class="form-group">
    <label>Refresh Interval (minutes)</label>
    <InputNumber class="form-control" @bind-Value="EditModel.RefreshInterval" />
    <small class="form-text">How often to refresh the RSS feed in minutes (default is 5 minutes).</small>
</div>

@code {
    [Parameter, EditorRequired]
    public ItemEditModel EditModel { get; set; } = default!;
}
